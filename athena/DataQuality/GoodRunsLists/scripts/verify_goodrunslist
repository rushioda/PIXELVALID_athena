#!/usr/bin/env python

import sys
import os, os.path

from GoodRunsLists.GoodRunsListTool import verifyGRL

if __name__ == "__main__":

  if len(sys.argv) < 2:
    print "usage: ", sys.argv[0], "<goodrunlistxmlfile>"
    sys.exit(1)
  xmlfile = sys.argv[1]

  print ">> Now verifying good-run list(s) stored in XML file: \'%s\'" % (xmlfile)
  verifyGRL(xmlfile)

