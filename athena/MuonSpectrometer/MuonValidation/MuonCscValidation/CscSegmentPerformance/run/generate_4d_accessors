#!/bin/sh

set_maxent() {
  FILE=$1
  OLDVAL=$2
  NEWVAL=$3
  mv $FILE $FILE.old
  cat $FILE.old | sed 's/\['$OLDVAL'\]/['$NEWVAL']/g' > $FILE
}

csc_4d_segment_performance.exe -g \
  /afs/usatlas.bnl.gov/users/dladams/data/csc_simseg.root \
  /afs/usatlas.bnl.gov/users/dladams/data/csc_segments.root

mv Segment4dAccessor.h ../CscSegmentPerformance
rm Segment4dAccessor.C

# Patch the headers to handle larger events.
set_maxent ../CscSegmentPerformance/Segment4dAccessor.h 2 2000
set_maxent ../CscSegmentPerformance/Segment4dAccessor.h 4 32
