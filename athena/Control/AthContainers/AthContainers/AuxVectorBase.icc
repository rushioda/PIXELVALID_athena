 */
template <class ForwardIterator>
void AuxVectorBase::clearIndices1 (const SG_STD_OR_BOOST::true_type&,
                                   ForwardIterator beg,
                                   ForwardIterator end)
{
  if (!m_trackIndices)
    return;

  for (; beg != end; ++beg)
    if (*beg)
      (*beg)->setIndex (0, 0);
}


